# Copy this file to .env and fill in your values

# ========================================
# API KEYS
# ========================================
SERPAPI_KEY=your_serpapi_key_here
PRICECHARTING_API_KEY=your_pricecharting_key_here

# ========================================
# NETWORK CONFIGURATION
# ========================================
# Your ngrok tunnel URL (update this each session if using free tier)
NGROK_URL=https://abc123.ngrok-free.app

# ========================================
# DIRECTORY PATHS
# ========================================
# Where Czur scanner saves images
SCAN_DIR=/path/to/czur/output

# Where organized inventory will be stored
ORGANIZED_DIR=/home/yourusername/inventory/organized

# ========================================
# OLLAMA CONFIGURATION
# ========================================
OLLAMA_ENDPOINT=http://localhost:11434/api/generate
LLM_MODEL=qwen2.5:32b
OLLAMA_TIMEOUT=120

# ========================================
# VISION MODEL (for automated_graded_inventory.py)
# ========================================
# Multimodal model for reading grades from slab images (Pass 1)
VISION_MODEL=deepseek-ocr
VISION_TIMEOUT=120

# Target DPI for downscaled images sent to vision model (source DPI read from image metadata)
DOWNSCALE_DPI=72

# ========================================
# PROCESSING SETTINGS
# ========================================
# Auto-crop images to remove black mat
AUTOCROP_ENABLED=true

# ImageMagick fuzz tolerance (0-100)
AUTOCROP_FUZZ=10

# Max PriceCharting results to fetch per item (1-10)
PRICECHARTING_MAX_RESULTS=5

# Enable verbose logging
VERBOSE_LOGGING=false

# Retry attempts for network errors (timeouts, connection drops)
MAX_RETRIES=2

# ========================================
# INVENTORY FILE PATHS
# ========================================
# Override these if inventory files are stored outside ORGANIZED_DIR
INVENTORY_JSON=organized/inventory.json
INVENTORY_CSV=organized/inventory.csv
BACKUP_DIR=organized/backups